<ul class="sub-menu">
  <% menus.each do |submenu| %>
      <%= content_tag :li, class: "menu-item menu-item-type-taxonomy menu-item-object-category" do %>
          <%= link_to submenu.name, submenu%>
          <%= render 'submenus', menus: submenu.children if submenu.has_children? %>
      <% end %>
  <% end %>
</ul>